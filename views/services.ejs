  <!-- Grid Section (Aligned Top and Bottom) -->
  <div class="container grid-section">
    <div class="grid-item search-section text-center">
      <h2>Search Parking Availability</h2>
      <form id="parking-search-form">
        <div class="form-group">
          <input type="text" id="location" class="form-control" placeholder="Enter your Area (City/Street)" required>
        </div>
        <div class="form-group">
          <select id="vehicle-type" class="form-control" required>
            <option value="">Select Vehicle Type</option>
            <option value="car">Car</option>
            <option value="bike">Bike</option>
