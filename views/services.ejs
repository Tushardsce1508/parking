  <!-- JavaScript for Parking Availability Check -->
  <script>
    // Simulating dynamic parking availability check
    document.getElementById('parking-search-form').addEventListener('submit', function (e) {
      e.preventDefault();

      var location = document.getElementById('location').value;
      var vehicleType = document.getElementById('vehicle-type').value;

      if (location && vehicleType) {
        // Here we simulate a check for parking availability (you can replace this with a real API call)
        var available = Math.random() > 0.5; // Randomly determine availability (50% chance)
        var resultMessage = document.getElementById('result-message');

        if (available) {
          resultMessage.textContent =` Parking is available for ${vehicleType} in ${location}.`;
          resultMessage.classList.remove('no-parking');
          resultMessage.classList.add('available');
        } else {
          resultMessage.textContent = `Sorry, no parking available for ${vehicleType} in ${location}.`;
          resultMessage.classList.remove('available');
          resultMessage.classList.add('no-parking');
        }
      } else {
        alert('Please fill in all fields.');
      }
    });

    function downloadReceipt() {
      alert('Receipt downloaded!');
    }
  </script>
