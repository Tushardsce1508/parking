    <script>
      const backendUrl = 'http://localhost:3000'; // Update to your deployed backend URL
      
      // Generate QR Code
      document.getElementById('generate-qr').addEventListener('click', async () => {
          const response = await fetch(`${backendUrl}/generate-qr`, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ amount: 20, userId: 'user123' })
          });
          const data = await response.json();
          document.getElementById('qr-code-section').innerHTML = `<img src="${data.qrCode}" alt="QR Code">`;
          document.getElementById('download-receipt-qr').style.display = 'block';
      });
      
      // Process Card Payment
      document.getElementById('card-payment-form').addEventListener('submit', async (e) => {
          e.preventDefault();
          const response = await fetch(`${backendUrl}/pay-with-card`, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                  amount: 20,
                  currency: 'usd',
                  source: 'tok_visa', // Replace with actual Stripe token
                  description: 'Parking payment'
              })
          });
          const data = await response.json();
          if (data.message === 'Payment successful') {
              document.getElementById('download-receipt-card').style.display = 'block';
          } else {
              alert('Payment failed!');
          }
      });
      </script>

