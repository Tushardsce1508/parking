    <script>
      const backendUrl = 'http://localhost:3000'; // Update to your deployed backend URL

      document.getElementById('generate-qr').onclick = function () {
        const value = document.getElementById('qr-input').value;
        if (!value) return alert('Enter payment info!');
        const qr = new QRious({ value, size: 200 });
        const img = document.getElementById('qr-code-image');
        img.src = qr.toDataURL();
        img.style.display = 'block';
        const dl = document.getElementById('download-qr');
        dl.href = qr.toDataURL();
        dl.style.display = 'inline-block';
      };

      // Process Card Payment
      document.getElementById('card-payment-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const response = await fetch(`${backendUrl}/pay-with-card`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            amount: 20,
            currency: 'usd',
            source: 'tok_visa', // Replace with actual Stripe token
            description: 'Parking payment'
          })
        });
        const data = await response.json();
        if (data.message === 'Payment successful') {
          document.getElementById('download-receipt-card').style.display = 'block';
        } else {
          alert('Payment failed!');
        }
      });
    </script>

