  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color:#1e3c72;
    }

    .login-form {
      margin: 50px auto;
      max-width: 450px;
      padding: 30px;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      animation: fadeIn 1s ease-in-out;
    }

    .login-form h2 {
      font-size: 2rem;
      color: #2a5298;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .btn-custom {
      background-color:#1e3c72;
      color: white;
      border-radius: 25px;
      transition: background-color 0.3s ease;
    }

    .btn-custom:hover {
      background-color: #1e3c72;
    }

    .form-control {
      border-radius: 5px;
      padding: 12px;
      font-size: 1rem;
    }

    .already-logined {
      text-align: center;
      margin-top: 20px;
      font-size: 1rem;
    }

    .already-logined a {
      color: #2a5298;
      text-decoration: none;
      font-weight: bold;
    }

    .already-logined a:hover {
      text-decoration: underline;
    }

    .logged-in-message {
      background-color: #28a745;
      color: white;
      padding: 15px;
      border-radius: 5px;
      margin-bottom: 20px;
      text-align: center;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  </style>
</head>
