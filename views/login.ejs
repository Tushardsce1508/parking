  <!-- Logged-in Message (if applicable) -->
  <div id="loggedInMessage" class="logged-in-message" style="display: none;">
    <p>You are already logged in! <a href="dashboard.ejs">Go to your dashboard</a> or <a href="logout.ejs">Logout</a>.</p>
  </div>

  <!-- Login Form -->
  <div class="login-form">
    <h2 class="text-center">Login</h2>
    <form id="login-Form" method="post" action="/auth/login">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" required>
      </div>
      <button type="submit" class="btn btn-custom w-100">Login</button>
    </form>

    <div class="already-logined">
      <p>Don't have an account? <a href="/auth/register">Register here</a>.</p>
    </div>
  </div>

