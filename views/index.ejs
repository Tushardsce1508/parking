        }

        /* Gradient Hero Section with animation */
        .hero-section {
            background: linear-gradient(120deg, #1e3c72, #2a5298);
            color: white;
            text-align: center;
            padding: 100px 20px;
            clip-path: polygon(0 0, 100% 0, 100% 80%, 0 100%);
            animation: fadeIn 2s ease-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .hero-section h1 {
            font-size: 3rem;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1.5px;
        }

        .hero-section p {
            font-size: 1.2rem;
            margin-top: 10px;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
            border-radius: 25px;
            padding: 12px 30px;
            text-transform: uppercase;
            font-weight: bold;
            transition: background-color 0.3s ease-in-out;
        }

        .btn-custom:hover {
            background-color: #0056b3;
        }

        /* Card Section */
        .card {
            border: none;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .card-title {
            color: #007bff;
            font-weight: 600;
        }

        /* Footer Section */
        .footer {
            background-color: #1e3c72;
            color: white;
            padding: 40px 20px;
            text-align: center;
            border-top: 3px solid #007bff;
        }

        .social-icons a {
            transition: transform 0.3s ease, color 0.3s ease;
        }

        .social-icons a:hover {
            color: #007bff;
            transform: scale(1.1);
        }

        .footer a {
            color: #ffffff;
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }

        /* Responsive Design Enhancements */
        @media (max-width: 768px) {
            .hero-section h1 {
                font-size: 2rem;
            }

            .hero-section p {
                font-size: 1rem;
            }

            .card-body i {
                font-size: 2rem;
            }

            .btn-custom {
                padding: 10px 25px;
            }

            .footer {
                padding: 30px 20px;
